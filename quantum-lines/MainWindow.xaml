<Window x:Class="quantum_lines.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:quantum_lines"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="CanvasMain" Width="800" Margin="0,0,0,6">

        <Button Width="800" Height="418" Background="LightBlue" MouseMove="TrackingCoord" Canvas.Left="-2"/>
        <Label Width ="800" Height="30" Name="lblCoordinateInfo" Grid.Row="1" MinHeight="20" FontSize="14" Canvas.Top="388"/>

        <Image Width="783" Height="40" Canvas.Top="96" Source="/Безымянный.png" Canvas.Left="7" MouseMove="InsertingSquares" />
        <Thumb Canvas.ZIndex="99"  DragDelta="Thumb_DragDelta" Height="110" Width="284" Canvas.Left="230" Canvas.Top="185">
            <Thumb.Template>
                <ControlTemplate>
                    <Image Width="133" Height="107" Source="/myPhoto.png"/>
                </ControlTemplate>
            </Thumb.Template>
        </Thumb>
    </Canvas>
</Window>
